md-content(layout-padding)
  form(
    ng-submit="haELF.submit()"
    layout="column"
    layout-padding
  )
    md-input-container
      label Desc
      input(ng-model="haELF.form.desc")

    div(layout="row")
      md-input-container(flex)
        label Min Amount
        input(ng-model="haELF.form['amount-gteq']" type="number")

      md-input-container(flex)
        label Max Amount
        input(
          ng-model="haELF.form['amount-lteq']"
          type="number"
          min="{{ haELF.form['amount-gteq'] }}"
          ng-min="haELF.form['amount-gteq']"
        )

    div(layout-gt-md="row")
      div(flex)
        label Min Date
        md-datepicker(ng-model="haELF.form['date-gteq']")

      div(flex)
        label Max Date
        md-datepicker(ng-model="haELF.form['date-lteq']")

    md-chips(ng-model="haELF.form['tag-names']")

    div(layout-gt-sm="row")
      md-button.md-primary.md-raised(flex type="submit") FILTER
      md-button(flex ng-click="haELF.reset()") CLEAR
